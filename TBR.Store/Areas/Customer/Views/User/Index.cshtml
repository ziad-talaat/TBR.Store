 @model UserPageVM

@{
    ViewData["Title"] = "My Profile";

    string profileImage = string.IsNullOrEmpty(Model.ImageUrl)
        ? Url.Content("~/images/Users/cat.jpg")
        : Url.Content(Model.ImageUrl);
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card border-0 shadow-lg rounded-4 text-center">
                <div class="card-body p-5">
                    <img src="@profileImage" class="rounded-circle shadow-sm mb-4" width="120" height="120" alt="Profile Image" />

                    <h3 class="fw-bold">@Model.UserName</h3>
                    <p class="text-muted">@Model.Email</p>

                    <form method="post" asp-action="ChangeImage" asp-controller="User" enctype="multipart/form-data" id="uploadForm">
                        <input name="file" id="fileInput" type="file" class="d-none" onchange="document.getElementById('uploadForm').submit()" />
                    </form>

                    <a href="javascript:void(0);" id="changeImageLink" class="btn btn-outline-primary btn-sm mt-3 me-2">
                        Change Image
                    </a>

                    <a asp-action="ChangePassword" asp-controller="User" class="btn btn-outline-warning btn-sm mt-3">
                        Change Password
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.getElementById('changeImageLink').addEventListener('click', function () {
            document.getElementById('fileInput').click();
        });
    </script>
}

