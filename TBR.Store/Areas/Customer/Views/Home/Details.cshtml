@model ShoppingCart
<form method="post">
    <input asp-for="ProductId" type="hidden" />
    <input type="hidden" id="voteType" name="voteType"  />
    <div class="card shadow border-0 mt-4">
        <div class="card-header bg-secondary bg-gradient text-light py-4">
            <div class="row">
                <div class="col-12 text-center">
                    <h3 class="text-white text-uppercase">Title</h3>
                    <p class="text-white-50 fw-semibold mb-0">by @Model.Product.Title</p>
                </div>
            </div>
        </div>
        <div class="card-body">
            <div class="py-3">
                <div class="row">
                    <div class="col-6 col-md-2 offset-lg-1 pb-1">
                        <a  asp-action="Index" asp-controller="Home" class="btn btn-outline-primary bg-gradient mb-5 fw-semibold btn-sm text-uppercase">
                            <small>Back to home</small>
                        </a>
                    </div>
                </div>
                <div class="row">
                    <div class="col-12 col-lg-3 offset-lg-1 text-center mb-3">
                        <img src="@Model.Product.ImageURL" width="100%" class="rounded" />
                    </div>

                    
                    <div class="col-12 col-lg-6 offset-lg-1">

                        <div class="col-12 col-md-6 pb-4">
                            <span class="badge">@Model.Product.Category.Name</span>
                        </div>
                        <div class="row ps-2">
                            <h6 class="text-dark text-opacity-50 ">ISBN : @Model.Product.ISBN</h6>
                        </div>
                        <div class="row ps-2">
                            <h6 class="text-dark text-opacity-50  pb-2">
                                ListPrice:
                                <span class="text-decoration-line-through">
                                   @Model.Product.DisplayPrice.ToString("c")
                                </span>
                            </h6>
                        </div>
                        <div class="row text-center ps-2">
                            <div class="p-1 col-3 col-lg-2 bg-white border-bottom">
                                <div class="text-dark text-opacity-50 fw-semibold">Quanitity</div>
                            </div>
                            <div class="p-1 col-3 col-lg-2 bg-white border-bottom">
                                <div class="text-dark text-opacity-50 fw-semibold">1-50</div>
                            </div>
                            <div class="p-1 col-3 col-lg-2 bg-white border-bottom">
                                <div class="text-dark text-opacity-50 fw-semibold">51-100</div>
                            </div>
                            <div class="p-1 col-3 col-lg-2 bg-white border-bottom">
                                <div class="text-dark text-opacity-50 fw-semibold">100+</div>
                            </div>
                        </div>
                        <div class="row text-center ps-2">
                            <div class="p-1 col-3 col-lg-2 bg-white text-warning fw-bold">
                                <div>Price</div>
                            </div>
                            <div class="p-1 col-3 col-lg-2 bg-white text-warning fw-bold">
                                <div>@Model.Product.Price.ToString("c")</div>
                            </div>
                            <div class="p-1 col-3 col-lg-2 bg-white text-warning fw-bold">
                                <div>@Model.Product.Price50.ToString("c")</div>
                            </div>
                            <div class="p-1 col-3 col-lg-2 bg-white text-warning fw-bold">
                                <div>@Model.Product.Price100.ToString("c")</div>
                            </div>
                        </div>
                        <div class="row pl-2 my-3">
                            <p class="text-secondary lh-sm">@Html.Raw(@Model.Product.Describtion)</p>
                        </div>
                        <div class="row pl-2 mb-3">
                            <div class="col-md-4">
                                <div class="input-group mb-3">
                                    <span class="input-group-text bg-primary text-white border-0 fw-semibold"
                                          id="inputGroup-sizing-default">
                                        Count
                                    </span>
                                    <input asp-for="Count" type="number" value="1" class="form-control text-end"
                                           aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default" />

                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="row mb-3">
                                <div class="col-6 col-md-3">
                                    <button type="submit" asp-action="Vote" id="likeBtn" value="@ViewBag.CurrentVote" class="btn btn-outline-success w-100">
                                        <i class="bi bi-hand-thumbs-up-fill"></i> Like
                                    </button>
                                </div>
                                <div class="col-6 col-md-3">
                                    <button type="submit" asp-action="Vote" id="dislikeBtn" value="@ViewBag.CurrentVote" class="btn btn-outline-danger w-100">
                                        <i class="bi bi-hand-thumbs-down-fill"></i> Dislike
                                    </button>
                                </div>
                            </div>
                            <div class="col-12 col-md-6 pb-1">
                                <button type="submit" 
                                        class="btn btn-primary bg-gradient  w-100 py-2 text-uppercase fw-semibold">
                                    Add to Cart 
                                </button>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts{
    <script>
        const likeBtn = document.getElementById("likeBtn");
        const dislikeBtn = document.getElementById("dislikeBtn");
        const voteInput = document.getElementById("voteType");

        likeBtn.addEventListener("click", () => {
            const current = voteInput.value;
            if (current === "0") {
                voteInput.value = -1;
                likeBtn.classList.remove("active");
            } else {
                voteInput.value = 0;
                likeBtn.classList.add("active");
                dislikeBtn.classList.remove("active");
            }
        });

        dislikeBtn.addEventListener("click", () => {
            const current = voteInput.value;
            if (current === "1") {
                voteInput.value = -1;
                dislikeBtn.classList.remove("active");
            } else {
                voteInput.value = 1;
                dislikeBtn.classList.add("active");
                likeBtn.classList.remove("active");
            }
        });
    </script>

}